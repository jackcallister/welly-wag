<div class="media-container">
  <div class="media-object">
    <div class="media-body">
      <section>
        <h1><%= link_to @user.name, user_path(@user) %></h1>
        <% if @user == current_user %>
          <p><%= link_to 'Sign out', destroy_user_session_path, method: :get %></p>
          <p><%= link_to 'Settings', edit_user_path %></p>
          <p><%= link_to 'Change Password', edit_user_registration_path %></p>
        <% end %>
      </section>
    </div>

    <% unless @user == current_user %>
      <div class="media-image">
        <%= render 'shared/avatar', user: @user %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'notifications/notifications', notifications: @user.notifications if @user == current_user && @user.notifications.any? %>

<% if @user.posts.any? %>

  <div class="media-object media-header">
    <div class="media-body">
      <hgroup>
        <h1>Your posts</h1>
      </hgroup>
    </div>
  </div>

  <%= render 'posts/posts', posts: @user.posts %>
<% end %>
