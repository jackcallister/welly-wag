<nav class="main">
  <ul>
    <% if current_user %>
      <li>
        <%= notification_badge(current_user.notifications) if current_user.notifications.any? %>
        <%= link_to 'profile', user_path(current_user) %>
      </li>
      <li><%= link_to 'new post', new_post_path, class: 'button' %></li>
    <% else %>
      <li><%= link_to 'log in', new_user_session_path %></li>
      <li><%= link_to 'join', new_user_registration_path, class: 'button' %></li>
    <% end %>
  </ul>
</nav>
