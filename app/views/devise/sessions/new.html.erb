<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-notice">Whoa there, that wasn't quite right. Have another crack at it.</div>
  <% end %>

  <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'input' %>
  <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'input' %>

  <div class="media-object align-middle">
    <div class="media-body">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
    </div>
    <%= f.submit 'Enter', class: 'button button-right' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
