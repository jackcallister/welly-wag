<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :name, autocomplete: "off", placeholder: 'Name', class: 'input'  %>

  <%= f.email_field :email, autocomplete: "off", placeholder: 'Email', class: 'input' %>

  <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'input' %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

  <%= f.submit 'Enter', class: 'button button-right' %>
<% end %>

<%= render "devise/shared/links" %>
