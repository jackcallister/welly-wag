<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autocomplete: "off", placeholder: 'Email', class: 'input' %>

  <%= f.submit "Send reset password instructions", class: 'button button-right' %>
<% end %>

<%= render "devise/shared/links" %>
