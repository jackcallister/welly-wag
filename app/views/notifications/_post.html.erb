<div class="media-object notification align-middle small-image">
  <div class="media-prefix">
    <%= render 'shared/avatar', user: notification.notifiable.post.user %>
  </div>

  <div class="media-body">
    <p><%= notification.notifiable.user.name %> commented on your <strong><%= link_to 'post', post_path(notification.notifiable) %></strong>.</p>
  </div>
</div>

