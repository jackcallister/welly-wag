<div class="media-object notification align-middle small-image">
  <div class="media-prefix">
    <%= render 'shared/avatar', user: notification.sender %>
  </div>

  <div class="media-object">
    <p><%= notification.sender.name %> replied to your <strong><%= link_to 'comment', comment_path(notification.notifiable) %></strong>.</p>
  </div>
</div>
