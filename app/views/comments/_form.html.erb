<%= form_for Comment.new do |f| %>
  <%= f.text_area :content, placeholder: "Make a comment and please be respectful." %>
  <%= f.hidden_field :comment_id, value: comment.id if comment %>
  <%= f.hidden_field :post_id, value: post.id %>

  <%= f.submit 'Comment', class: 'button button-right' %>
<% end %>
